#############################################
# Configurações da API
#############################################

# Porta em que a API será executada (default: 8080)
API_PORT=8080

# Host em que a API será executada (default: localhost)
API_HOST=localhost

# URL permitida para fazer requisições à API (CORS)
# Exemplo: http://localhost:3000 (para desenvolvimento local)
# Em produção, substitua pelo domínio da sua aplicação frontend
CORS_ORIGIN=http://localhost:3000

#############################################
# Ambiente de Execução
#############################################

# Define o ambiente de execução da aplicação
# Valores possíveis: development, production
# Esta configuração determina qual conjunto de variáveis do banco de dados será usado
NODE_ENV=development

#############################################
# Banco de Dados - Ambiente de Desenvolvimento
#############################################

# Nome de usuário do PostgreSQL
# Exemplo: postgres
DB_DEV_USERNAME=postgres

# Senha do usuário do PostgreSQL
# Exemplo: minhasenha123
DB_DEV_PASSWORD=sua_senha_aqui

# Nome do banco de dados
# Exemplo: Computer_Shop
DB_DEV_DATABASE=Computer_Shop

# Host do banco de dados (default: localhost)
DB_DEV_HOST=localhost

# Porta do PostgreSQL (default: 5432)
DB_DEV_PORT=5432

#############################################
# Banco de Dados - Ambiente de Produção
#############################################

# Nome de usuário do PostgreSQL em produção
DB_PROD_USERNAME=postgres_prod

# Senha do usuário do PostgreSQL em produção
DB_PROD_PASSWORD=sua_senha_prod

# Nome do banco de dados em produção
DB_PROD_DATABASE=Computer_Shop_Prod

# Host do banco de dados em produção
# Exemplo: seu-banco.host.com
DB_PROD_HOST=localhost

# Porta do PostgreSQL em produção (default: 5432)
DB_PROD_PORT=5432

#############################################
# Configurações Gerais
#############################################

# Fuso horário da aplicação
# Mantenha este valor para horário de Brasília
TZ=America/Sao_Paulo

# Modo debug para logs detalhados
# Valores possíveis: true, false
DEBUG=false